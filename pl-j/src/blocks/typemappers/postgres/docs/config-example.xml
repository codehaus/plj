
<!--
	This is an example configuration fragment for PostgreSQL type mapper
	the root element is typemapper
-->

<typemapper>
	
	<!--
		Mapping settigs
	-->
	<map>
		<type pgname="varchar" class="org.pgj.typemapping.postgres.VarChar"/>
		<type pgname="int2" class="org.pgj.typemapping.postgres.Int2"/>
		<type pgname="int4" class="org.pgj.typemapping.postgres.Int4"/>
		<type pgname="int8" class="org.pgj.typemapping.postgres.Int8"/>
		<type pgname="bool" class="org.pgj.typemapping.postgres.Bool"/>
	</map>
	
	<!--
		Back mapping defaults
	-->
	<backmap>
		<type class="java.lang.String" pgname="varchar"/>
		<type class="java.lang.Integer" pgname="int2"/>
		<type class="java.lang.Long" pgname="int4"/>
		<type class="java.lang.Byte" pgname="byte"/>
		<type class="java.lang.Boolean" pgname="bool"/>
	</backmap>
	
</typemapper>

